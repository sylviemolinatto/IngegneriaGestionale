<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="254.0" prefWidth="302.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.librettovoti.FXMLController">
   <top>
      <Label text="Libretto Voti" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="txtVoti" editable="false">
               <VBox.margin>
                  <Insets left="4.0" right="4.0" />
               </VBox.margin>
            </TextArea>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Nome Corso">
                     <GridPane.margin>
                        <Insets left="4.0" />
                     </GridPane.margin>
                  </Label>
                  <Label prefHeight="17.0" prefWidth="67.0" text="Punteggio" GridPane.rowIndex="1">
                     <padding>
                        <Insets left="4.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="txtNome" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets bottom="4.0" top="4.0" />
                     </GridPane.margin>
                  </TextField>
                  <ComboBox fx:id="cmbPunti" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="4.0" top="4.0" />
                     </GridPane.margin>
                  </ComboBox>
                  <Button mnemonicParsing="false" onAction="#handleNuovoVoto" text="Aggiungi" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <GridPane.margin>
                        <Insets bottom="4.0" top="4.0" />
                     </GridPane.margin>
                  </Button>
               </children>
            </GridPane>
         </children>
      </VBox>
   </center>
   <bottom>
      <Label fx:id="txtStatus" textFill="#e90808" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="4.0" top="4.0" />
         </padding>
      </Label>
   </bottom>
</BorderPane>
